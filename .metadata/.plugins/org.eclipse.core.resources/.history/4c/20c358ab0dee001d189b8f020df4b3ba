package NewCalculator;


public class NewCalculatorView {
	
    public void inputFirstNum(int firstNum) {
        System.out.printf("첫번째 숫자를 입력하세요 ", firstNum);
    }

    public void inputOperator() {
        System.out.print("연산자를 입력하세요. [ +, -, *, / ] ");
    }

    public void inputSecondNum(int secondNum) {
        System.out.printf("두번째 숫자를 입력하세요 ", secondNum);
    }

    public void printCalculationResult(int result) {
        System.out.printf("결과 : ", result);
    }

    public void printContinueOrExitMessage() {
        System.out.print("종료를 원하시면 [안녕] 을 입력해주세요");
    }

    public void printErrorMessage(String message) {
        System.out.printf(message+"\n");
    }
}

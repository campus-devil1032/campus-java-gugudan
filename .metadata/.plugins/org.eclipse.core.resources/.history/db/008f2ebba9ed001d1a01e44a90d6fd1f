package NewCalculator;

import java.io.BufferedReader;
import java.io.InputStreamReader;

public class Main {

	public static void main(String[] args) {
		
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		String input = "";

		while (true) {
							System.out.println("어떤 기능을 사용하실 건가요?");
							System.out.println("숫자와 함께 엔터를 눌러주세요.");
							System.out.println("1. 구구단");
							System.out.println("2. 계산기");
							System.out.println("종료하시려면 3을 입력하세요");
							
							input = br.readLine();
			
			if (input == "3" + "\n") {
				System.out.println("계산기를 종료합니다.");
				System.exit(0);

			} else if (input.equals("1" + "\n") || input.equals("2" + "\n")) {
				break;
			}
			System.out.println("잘못 입력하셨습니다. 다시 입력해주세요.");

			NewGuGuDanModel model = new NewGuGuDanModel(0);
			NewGuGuDanView view = new NewGuGuDanView();
			NewGuGuDanController controller = new NewGuGuDanController(model, view);

			controller.run();
		} 
			

	}
}
}

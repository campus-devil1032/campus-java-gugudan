package Caclulator;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class CaclulatorApp {
	public static void main(String arg[]) throws IOException {
		
		CalculatorCalcModel modelCalc = new CalculatorCalcModel();
		CalculatorGuGuDanModel modelGuGuDan = new CalculatorGuGuDanModel();

		CalculatorCalcView viewCalc = new CalculatorCalcView();
		CalculatorGuGuDanView viewGuGuDan = new CalculatorGuGuDanView();

		CalculatorCalcController controllerCalc = new CalculatorCalcController(modelCalc, viewCalc);
		CalculatorGuGuDanController controllerGuGuDan = new CalculatorGuGuDanController(modelGuGuDan, viewGuGuDan);

		while (true) {
			try {
			System.out.println("어떤 기능을 사용하실 건가요?");
			System.out.println("1. 구구단");
			System.out.println("2. 계산기");
			System.out.println("종료하시려면 3을 입력하세요");
			
			BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
			String input = br.readLine();
			
			if (input=="3") {
				break;
			}

			controller.setDan(input);
			controller.updateView();

		}
		}
	}
}
